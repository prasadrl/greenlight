<div class="col-sm-11 col-xs-12 mx-auto">
  <div class="my-5 col-lg-11 col-sm-12 col-xs-12 mx-auto">
    <div class="mt-7 py-1 col-12">
      <div class="row">
        <%= render "rooms/components/join_room_block"%>
        <% if current_user.role.get_permission("can_create_rooms") && !room_limit_exceeded %>
            <%= render "rooms/components/create_room_block"%>
        <% end %>
      </div>
    </div>

    <% if total_room_count(current_user) > 1 %>
      <div class="mt-7 col-12">
        <%= render "rooms/components/my_rooms" %>
      </div>
    <% end %>

    <div class="mt-3 py-1 col-12">
        <%= render "rooms/components/room_detail", room: @room %>
    </div>
  </div>
</div>